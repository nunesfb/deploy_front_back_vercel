{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/server.ts",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/backend/(.*)",
      "dest": "/backend/src/server.ts"
    },

    {
      "src": "^/$",
      "status": 302,
      "dest": "/frontend/"
    },

    { "handle": "filesystem" },

    {
      "src": "/frontend/(.*)",
      "dest": "/$1"
    },

    {
      "src": "/frontend/?(.*)",
      "dest": "/index.html"
    }
  ]
}
